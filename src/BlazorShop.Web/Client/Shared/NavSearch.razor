<EditForm Model="searchModel" OnValidSubmit="Search" method="get" class="search">
    <div class="input-group w-100">
        <InputText @bind-Value="searchModel.Query" type="search" class="form-control" placeholder="Search" style="width:55%;" />
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</EditForm>

@code {
    private readonly ProductsSearchRequestModel searchModel = new ProductsSearchRequestModel();

    private void Search() => this.NavigationManager.NavigateTo($"/products/search/{this.searchModel.Query}/page/1");
}
