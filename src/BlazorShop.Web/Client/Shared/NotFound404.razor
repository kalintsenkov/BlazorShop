<section class="section-wrap page-404">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-6 col-md-offset-3">
                <h1>404</h1>
                <h2 class="mb-50">Page Not Found</h2>
                <p class="mb-20">You can go back to <a href="/">Homepage</a> or use search</p>

                <EditForm Model="searchModel" OnValidSubmit="Search" class="relative" method="get">
                    <InputText @bind-Value="searchModel.Query" type="search" placeholder="Search" class="mb-0" />
                    <button type="submit" class="search-button"><i class="fas fa-search"></i></button>
                </EditForm>

            </div>
        </div>

    </div>
</section>

@code {
    private readonly SearchRequestModel searchModel = new SearchRequestModel();

    private void Search()
    {
        this.NavigationManager.NavigateTo($"/products/{this.searchModel.Query}/1");
    }
}